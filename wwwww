  <script>
    function baris() {
      document.getElementById("kart").innerHTML = `
        <div class="heart">‚ù§Ô∏è</div>
        <p style="font-size:18px;">
          Sinirlendik birbirimizi kƒ±rdƒ±k falan ama seni √ºzmek istemedim √∂z√ºr dilerim bir ≈üans daha falan
        </p>
      `;
      startHeartRain();
    }

    function startHeartRain() {
      const duration = 8000; // 8 saniye
      const endTime = Date.now() + duration;

      const interval = setInterval(() => {
        if (Date.now() > endTime) {
          clearInterval(interval);
          return;
        }
        createHeart();
      }, 60); // yoƒüun kalp

      function createHeart() {
        const heart = document.createElement("div");
        heart.className = "rain-heart";
        heart.textContent = "‚ù§Ô∏è";
        heart.style.left = Math.random() * 100 + "vw";
        heart.style.fontSize = (18 + Math.random() * 30) + "px";
        heart.style.animationDuration = (1.6 + Math.random() * 1.4) + "s"; // hƒ±zlƒ± d√º≈ü√º≈ü
        document.body.appendChild(heart);
        setTimeout(() => heart.remove(), 3500);
      }
    }
  </script>
